<h1>Top 10 人氣餐廳</h1>
<hr />
<div class="row" style="text-align: center;">
  {{#each restaurants}}
  <div class="col-md-4">
    <div class="card mb-4 shadow-sm">
      <img class="card-img-top" src="{{this.image}}" alt="Card image cap" width="286px" height="180px">
      <div class="card-body">
        <p class="card-text">
          <a href="/restaurants/{{this.id}}">
            {{this.name}}
          </a>
        </p>
        <span class="badge badge-secondary">收藏人數：{{this.FavoritedUsers.length}}</span>
        <span class="badge badge-secondary">{{this.categoryName}}</span>
        <p class="card-text">{{this.description}}</p>
        <div class="d-flex flex-row">
          <a class="btn btn-primary mx-2" href="/restaurants/{{this.id}}">Show</a>

          {{#if this.isFavorited }}
          <form action="/favorite/{{this.id}}?_method=DELETE" method="POST"><button type="submit"
              class="btn btn-danger">移除最愛</button></form>
          {{else}}
          <form action="/favorite/{{this.id}}" method="POST"><button type="submit" class="btn btn-primary">加到最愛</button>
          </form>
          {{/if}}

          {{#if this.isLiked }}
          <form class="mx-2" action="/like/{{this.id}}?_method=DELETE" method="POST"><button type="submit"
              class="btn btn-danger">Dislike</button></form>
          {{else}}
          <form class="mx-2" action="/like/{{this.id}}" method="POST"><button type="submit"
              class="btn btn-primary">Like</button>
          </form>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>